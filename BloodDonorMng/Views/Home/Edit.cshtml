@model AuthProject.Models.Donor

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <style>
        /* add inline styles here */
        body {
            background-color: #f9f9f9;
            font-family: Arial, sans-serif;
        }

        h4 {
            color: #dc3545;
            font-weight: bold;
        }

        input[type=submit] {
            background-color: #dc3545;
            color: #fff;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            cursor: pointer;
        }

            input[type=submit]:hover {
                background-color: #c82333;
            }

        label.control-label {
            font-weight: bold;
        }

        select.form-select {
            border-radius: 4px;
            border: 1px solid #ccc;
            padding: 6px 12px;
            font-size: 14px;
            font-weight: normal;
            line-height: 1.42857143;
            background-color: #fff;
            background-image: none;
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
            transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            width: 100%;
            max-width: 100%;
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
        }

            select.form-select:focus {
                border-color: #dc3545;
                outline: 0;
                box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
            }
    </style>

</head>
<body>

<h4>Donor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" type="hidden"/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
           
          
               <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" type="radio" class="form-check-input" value="Male" />
                <label class="form-check-label" for="flexRadioDefault1">
                    Male
                </label>
                <input asp-for="Gender" type="radio" class="form-check-input" value="Female" />
                <label class="form-check-label" for="flexRadioDefault1">
                    Female
                </label>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
          
                <div class="form-group">
                    <label asp-for="CityName" class="control-label"></label>
                    <select class="form-select" asp-for="CityId" required>
                        <option selected>Select City</option>
                        @{
                            foreach (var city in ViewBag.list)
                            {
                                <option value="@city.CityId">@city.CityName</option>
                            }
                        }
                    </select>
                </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" required />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
     
              <div class="form-group">
                        <label asp-for="BloodGroup" class="control-label"></label>
                        <select class="form-select" asp-for="BloodGroup">
                            <option value="A+ve">A+ve</option>
                            <option value="A-ve">A-ve</option>
                            <option value="B+ve">B+ve</option>
                            <option value="B-ve">B-ve</option>
                            <option value="AB+ve">AB+ve</option>
                            <option value="AB-ve">AB-ve</option>
                            <option value="O+ve">O+ve</option>
                            <option value="O-ve">O-ve</option>
                        </select>
                    <span asp-validation-for="BloodGroup" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="Dob" class="control-label"></label>
                    <input asp-for="Dob" type="date" class="form-control" required />
                    <span asp-validation-for="Dob" class="text-danger"></span>
                </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
